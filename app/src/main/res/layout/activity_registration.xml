<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.s525120.android.shareride.RegistrationActivity"
    android:background="@drawable/tabbackground2">


    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
android:textSize="25dp"
        android:background="#ffffff"
        android:inputType="textPersonName"
       android:fontFamily="@string/common_google_play_services_install_text_phone"
        android:id="@+id/name_et"
        android:layout_marginTop="40dp"
        android:hint="@string/name_hint"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="#ffffff"
        android:textSize="25dp"
        android:inputType="text"
        android:hint="@string/username_hint"
        android:layout_marginTop="2dp"
        android:id="@+id/newusername_et"
        android:layout_below="@+id/name_et"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:textSize="22dp"
        android:background="#ffffff"
        android:inputType="textPassword"
        android:hint="@string/password_hint"
        android:textStyle="bold"
        android:id="@+id/password_et"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/newusername_et"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:textSize="22dp"
        android:background="#ffffff"
        android:layout_marginTop="2dp"
        android:textStyle="bold"
        android:inputType="textPassword"
        android:hint="@string/confirm_password"
        android:id="@+id/confirmpassword_et"
        android:layout_below="@+id/password_et"
        android:layout_centerHorizontal="true"/>


            <EditText
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:textSize="25dp"
                android:layout_marginTop="1dp"
                android:background="#ffffff"
                android:inputType="phone"
                android:hint="@string/phone_hint"
                android:ems="10"
                android:id="@+id/phone_et"
                android:layout_below="@+id/confirmpassword_et"/>

            <EditText
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:textSize="25dp"
                android:background="#ffffff"
                android:inputType="textEmailAddress"
                android:layout_marginTop="2dp"
                android:ems="10"
                android:id="@+id/newemail_et"
                android:hint="@string/email_hint"

                android:layout_below="@+id/phone_et"/>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/newsubmit_et"
        android:textColor="#f2000000"
        android:background="#e6ffFFFF"
        android:id="@+id/newsubmit_bt"
        android:layout_below="@id/newemail_et"

        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
