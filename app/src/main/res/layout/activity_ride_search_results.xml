<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.nwmissouri.shareride.RideSearchResults"
    android:background="@drawable/tabbackground2">
    <RelativeLayout
        style="@style/GenericProgressBackground"
        android:id="@+id/loadingPanel">
        <ProgressBar
            style="@style/GenericProgressIndicator"
            android:id="@+id/progressBar"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Fetching Results..."
            android:id="@+id/recentfTV"
            android:layout_above="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="69dp" />

    </RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="true"
        android:smoothScrollbar="true"
        android:id="@+id/rideSearchResultsLV"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/emptyrideoffer"
        android:text="Empty"
        android:textSize="22dp"
        android:textStyle="italic"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:visibility="invisible"/>
</RelativeLayout>
