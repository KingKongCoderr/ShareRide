<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.nwmissouri.shareride.Profile_settings"
    android:background="@drawable/tabbackground2">
    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:textSize="25dp"
        android:background="#ffffff"
        android:inputType="textPersonName"
        android:fontFamily="@string/common_google_play_services_install_text_phone"
        android:id="@+id/editname_et"
        android:layout_marginTop="40dp"
        android:hint="Edit Name"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="#ffffff"
        android:textSize="25dp"
        android:inputType="text"
        android:hint="Edit Username"
        android:layout_marginTop="2dp"
        android:id="@+id/editnewusername_et"
        android:layout_below="@+id/name_et"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:textSize="22dp"
        android:background="#ffffff"
        android:inputType="textPassword"
        android:hint="Edit password"
        android:textStyle="bold"
        android:id="@+id/editpassword_et"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/newusername_et"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:textSize="22dp"
        android:background="#ffffff"
        android:layout_marginTop="2dp"
        android:textStyle="bold"
        android:inputType="textPassword"
        android:hint="Confirm password"
        android:id="@+id/editconfirmpassword_et"
        android:layout_below="@+id/password_et"
        android:layout_centerHorizontal="true"/>


    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:inputType="phone"
        android:hint="Edit Phone number"
        android:ems="10"
        android:id="@+id/editphone_et"
        android:layout_below="@+id/confirmpassword_et"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:background="#ffffff"
        android:inputType="textEmailAddress"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:id="@+id/editnewemail_et"
        android:hint="Edit Email Adrress"

        android:layout_below="@+id/phone_et"/>



